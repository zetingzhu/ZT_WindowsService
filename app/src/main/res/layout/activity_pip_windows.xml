<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SystemWindowsAct">

    <TextView
        android:id="@+id/textView_pip_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="画中画状态"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_enter_pip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/button_enter_pip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手动进入画中画"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_pip_status" />

</LinearLayout>

